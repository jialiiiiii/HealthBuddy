<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_tab" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>
    <style name="text_tab_selected" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>

    <style name="CustomPickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <!-- Customize the text color -->
        <item name="android:textColorPrimaryInverse">@color/background</item>
        <item name="android:textColorSecondaryInverse">@color/background</item>
        <item name="colorAccent">@color/title</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/title</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:colorControlActivated">@color/title</item>
        <item name="colorOnPrimary">@color/title</item>
    </style>

    <style name="CustomDialogFragmentStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">350dp</item>
        <item name="android:windowMinWidthMinor">350dp</item>
    </style>
</resources>